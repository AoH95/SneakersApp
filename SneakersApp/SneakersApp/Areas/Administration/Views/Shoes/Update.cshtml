@model SneakersApp.Models.UploadShoeModel;

<div>
    <form asp-action="UpdateShoe" asp-route-id="@Model.Id" method="POST" enctype="multipart/form-data" id="upload-form">
        <div>
            <label asp-for="Title">Name</label>
            <input asp-for="Title"/>
        </div>
        <div>
            <label asp-for="Tags">Tags</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <button type="submit" id="btn-upload">
                Submit
            </button>
        </div>
    </form>
</div>