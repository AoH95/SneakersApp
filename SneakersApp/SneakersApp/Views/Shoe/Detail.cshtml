@model SneakersApp.Models.ShoesDetailModel;

<div class="shoes_detail_container">
    <div class="row">
        <div class="shoes_img_container col-lg-4 col-md-6">
            <img src="@Model.Url" alt="@Model.Title" />
        </div>
        <div class="shoes_infos_container col-lg-8 col-md-6 align-self-center">
            <h1>@Model.Title</h1>
            <p>Créé le @Model.Created</p>
        </div>
    </div>
    <a asp-controller="Shoe" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete this shoe</a>
    <a asp-controller="Shoe" asp-action="Index" class="btn btn-light">Back to home</a>
</div>