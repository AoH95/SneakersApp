@model SneakersApp.Models.ShoesDetailModel;

    <div class="shoes_detail_container">
        <div class="shoes_img_container">
            <img src="@Model.Url" alt="@Model.Title" />
        </div>
        <div class="shoes_infos_container">
            <p>Name: @Model.Title</p>
            <p>Uploaded: @Model.Title</p>
        </div>
        <a asp-controller="Shoe" asp-action="Update" asp-route-id="@Model.Id">Update</a>
        <a asp-controller="Shoe" asp-action="Delete" asp-route-id="@Model.Id">Delete this shoe</a>
        <a asp-controller="Shoe" asp-action="Index">Back to home</a>
    </div>