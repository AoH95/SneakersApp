@model SneakersApp.Models.UploadShoeModel;

<div>
    <form asp-action="UploadNewShoe" method="POST" enctype="multipart/form-data" id="upload-form">
        <div>
            <label asp-for="Title">Name</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label asp-for="Tags">Name</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label>
                Browse for Image
                <input type="file" name="file" style="display:none;" />
            </label>
        </div>
        <div>
            <button type="submit" id="btn-upload">
                Submit
            </button>
        </div>
    </form>
</div>